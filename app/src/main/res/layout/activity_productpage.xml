<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"><![CDATA[
    tools:context="christine.ilovezappos.ProductPage">



    ]]>

    <TextView
        android:text="Price"
        android:layout_width="wrap_content"
        android:id="@+id/priceBox"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageButton"
        android:layout_centerHorizontal="true"
        android:fontFamily="monospace"
        android:textSize="18sp" />

    <Button
        android:text="BACK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/returnBox"
        android:onClick="returnToMain"
        android:fontFamily="monospace"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:srcCompat="@drawable/circle"
        android:id="@+id/imageButton"
        android:src="@drawable/ic_add_white_24dp"
        android:background="@drawable/circle"
        android:onClick="addToCart"
        android:layout_marginBottom="14dp"
        android:layout_above="@+id/shareBox"
        android:layout_alignStart="@+id/returnBox" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/imageView"
        android:adjustViewBounds="false"
        android:layout_marginTop="51dp"
        android:scaleType="center"
        android:layout_below="@+id/nameBox"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Product Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nameBox"
        android:layout_marginTop="21dp"
        android:fontFamily="monospace"
        android:textSize="18sp"
        android:layout_below="@+id/brandBox"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Share with friends: "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/shareBox"
        android:layout_marginBottom="27dp"
        android:textSize="14sp"
        android:fontFamily="casual"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Brand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/brandBox"
        android:fontFamily="monospace"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_below="@+id/returnBox"
        android:layout_alignParentStart="true" />

</RelativeLayout>
